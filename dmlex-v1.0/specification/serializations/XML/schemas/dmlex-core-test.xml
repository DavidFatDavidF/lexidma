    <!-- Example 1 from DMLex core -->
    <Entry>
        <headword>aardvark</headword>
        <PartOfSpeech tag="n"/>
        <Sense>
            <definition>a long-nosed animal...</definition>
        </Sense>
    </Entry>
    <Entry>
        <headword>abacus</headword>
        <PartOfSpeech tag="n"/>
        <InflectedForm tag="pl">
            <text>abacuses</text>
        </InflectedForm>
        <Sense>
            <definition>a frame with balls...</definition>
        </Sense>
    </Entry>
    <Entry>
        <headword>abandon</headword>
        <PartOfSpeech tag="v"/>
        <InflectedForm tag="ing">
            <text>abandoning</text>
        </InflectedForm>
        <InflectedForm tag="pres">
            <text>abandons</text>
        </InflectedForm>
        <InflectedForm tag="past">
            <text>abandoned</text>
        </InflectedForm>
        <Sense>
            <definition>to suddenly leave a place or a person</definition>
            <Example>
                <text>I'm sorry I abandoned you like that</text>
            </Example>
        </Sense>
        <Sense>
            <definition>to stop supporting an idea</definition>
            <Example>
                <text>that theory has been abandoned</text>
            </Example>
        </Sense>
    </Entry>
    
